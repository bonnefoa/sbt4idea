<idea-plugin version="2">
    <name>Xsbt4Idea</name>
    <description>Xsbt integration in Intellij</description>
    <version>1.0</version>
    <vendor>Sora</vendor>
    <idea-version since-build="8000"/>

    <application-components>
        <!-- Add your application components here -->
        <component>
            <implementation-class>com.sora.sbt.ScalaTestComponent</implementation-class>
        </component>
    </application-components>

    <project-components>
        <!-- Add your project components here -->
    </project-components>

    <actions>
        <!-- Add your actions here -->
        <action id="SayScala" class="com.sora.sbt.SayScalaToWorld" text="Yop" description="Fais un yop">
            <add-to-group group-id="WindowMenu" anchor="first"/>
        </action>
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>
</idea-plugin>